<Page
    x:Class="GameBarMediaControls.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GameBarMediaControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <ComboBox x:Name="sessionsCombo" Margin="10,10,0,0" Width="182"/>
        <Button Content="Play / Pause" Margin="98,47,0,0"  VerticalAlignment="Top" Click="Button_Click_PlayPause"/>
        <Button Content="Next Track"   Margin="197,47,0,0" VerticalAlignment="Top" Click="Button_Click_SkipNext"/>
        <Button Content="Prev Track"   Margin="10,47,0,0"  VerticalAlignment="Top" Click="Button_Click_SkipPrev"/>
        <Button Content="Stop"         Margin="287,47,0,0" VerticalAlignment="Top" Click="Button_Click_Stop"/>
    </Grid>
</Page>
