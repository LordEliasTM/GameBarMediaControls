<Page
    x:Class="GameBarMediaControls.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GameBarMediaControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel Margin="10,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
            <ComboBox x:Name="sessionsCombo" Width="215"/>
            
            <StackPanel Orientation="Horizontal" Margin="0,5,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="50">
                <Button Click="Button_Click_SkipPrev" Padding="0,0,0,0" Width="50">
                    <Image HorizontalAlignment="Center" VerticalAlignment="Center" Height="50" Width="50" Source="/Assets/Prev.png"/>
                </Button>
                <Button Margin="5,0,0,0" Click="Button_Click_PlayPause" Padding="0,0,0,0" Width="50">
                    <Image HorizontalAlignment="Center" VerticalAlignment="Center" Height="50" Width="50" Source="/Assets/Play.png"/>
                </Button>
                <Button Margin="5,0,0,0" Click="Button_Click_SkipNext" Padding="0,0,0,0" Width="50">
                    <Image HorizontalAlignment="Center" VerticalAlignment="Center" Height="50" Width="50" Source="/Assets/Prev.png" RenderTransformOrigin="0.5,0.5">
                        <Image.RenderTransform>
                            <CompositeTransform Rotation="180"/>
                        </Image.RenderTransform>
                    </Image>
                </Button>
                <Button Margin="5,0,0,0" Click="Button_Click_Stop" Padding="0,0,0,0" Width="50">
                    <Image HorizontalAlignment="Center" VerticalAlignment="Center" Height="50" Width="50" Source="/Assets/Stop.png"/>
                </Button>
            </StackPanel>

            <StackPanel Margin="5,5,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="320">
                <TextBlock x:Name="title" Text="##Title" VerticalAlignment="Top" TextTrimming="CharacterEllipsis" FontSize="24"/>
                <TextBlock x:Name="artist" Text="##Artist" VerticalAlignment="Top" TextTrimming="CharacterEllipsis"/>
            </StackPanel>
        </StackPanel>

        <Image x:Name="thumbnail" HorizontalAlignment="Left" Height="100" Margin="230,10,0,0" VerticalAlignment="Top" Width="100"/>


        
        <TextBox x:Name="debugOutput" HorizontalAlignment="Left" Margin="419,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="200" Width="326" IsReadOnly="True" AcceptsReturn="True"/>

        <TextBlock HorizontalAlignment="Left" Margin="429,306,0,0" TextWrapping="Wrap" Text="##Time" VerticalAlignment="Top"/>
        <Slider x:Name="timeSlider" HorizontalAlignment="Left" Margin="492,299,0,0" VerticalAlignment="Top" Width="253"/>
        <Button Content="Button" Margin="551,250,0,0" VerticalAlignment="Top" Click="Button_Click"/>
    </Grid>
</Page>
